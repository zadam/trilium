{
	"compilerOptions": {
      "moduleResolution": "Node",
	  "declaration": false,
	  "sourceMap": true,
	  "outDir": "./dist",
	  "strict": true,
	  "noImplicitAny": true,
	  "resolveJsonModule": true,
	  "lib": ["ES2022"],
	  "downlevelIteration": true
	},
	"include": [
      "./src/**/*.js",
	  "./src/**/*.ts"
	],
	"exclude": ["./node_modules/**/*"],
	"ts-node": {
		"files": true
	},
	"files": [
		"src/types.d.ts"
	]
  }
